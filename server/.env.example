# Database
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/worklife_dashboard"

# Server
PORT=5001
NODE_ENV=development

# JWT
JWT_SECRET="replace-with-strong-secret"
JWT_REFRESH_SECRET="replace-with-strong-refresh-secret"
# Optional overrides
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"
# Or specify milliseconds for refresh cookie lifetime (overrides JWT_REFRESH_EXPIRES_IN)
# JWT_REFRESH_EXPIRES_IN_MS=604800000

# Cookies / CORS
# Example: COOKIE_DOMAIN=".worklife-dashboard.com"
COOKIE_DOMAIN=""
# Comma-separated list of allowed frontend origins (no trailing slash)
# Example: CLIENT_URL="https://worklife-dashboard.com,https://www.worklife-dashboard.com"
CLIENT_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
